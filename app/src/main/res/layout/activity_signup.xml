<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main"
    android:gravity="top|center_horizontal"
    android:orientation="vertical"
    tools:context=".Signup">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:text="Create New Account"
        android:textColor="@color/white"
        android:textSize="38sp"
        android:textStyle="bold"
        android:contentDescription="@string/create_account_label" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:gravity="top|center_horizontal"
        android:orientation="vertical"
        android:padding="30dp">

        <EditText
            android:id="@+id/fname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/grey_edit"
            android:hint="Enter your first name"
            android:imeOptions="actionDone"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:contentDescription="@string/first_name_hint" />

        <EditText
            android:id="@+id/lname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/grey_edit"
            android:hint="Enter your last name"
            android:imeOptions="actionDone"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:contentDescription="@string/last_name_hint" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/grey"
            android:hint="Enter your email"
            android:padding="10dp"
            android:textSize="20sp"
            android:contentDescription="@string/email_hint" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/grey_edit"
            android:hint="Enter your password"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:contentDescription="@string/password_hint" />

        <EditText
            android:id="@+id/confirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/grey_edit"
            android:hint="Confirm password"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:contentDescription="@string/confirm_password_hint" />

        <Button
            android:id="@+id/signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@drawable/button_background"
            android:gravity="center"
            android:text="Signup"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textStyle="bold"
            android:contentDescription="@string/signup_button" />

        <TextView
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Already have an account?"
            android:textColor="@color/main"
            android:textStyle="bold"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/login_prompt" />

    </LinearLayout>

</LinearLayout>
